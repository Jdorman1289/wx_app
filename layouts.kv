#################################### Main Window Layout #############################
MainWindow:

    MDScreen:
        size: root.width, root.height

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: "screen 1"
                text: "Current"
                icon: "home-thermometer-outline"

                MDGridLayout:
                    cols: 2
                    
                    canvas.before:
                        Color:
                            rgb: (.18, .18, .18)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    MDTextField:
                        id: location
                        hint_text: "City name:"
                        
                    MDRectangleFlatButton:
                        text: "Get Weather"
                        on_release: root.get_wx()
                    
                    MDTextField:
                        id: state
                        hint_text: "State name:"
                    
                    MDRectangleFlatButton:
                        text: "Clear"
                        on_release: root.clear()
                        

                    MDBoxLayout:
                        orientation: "vertical"
                        
                        ScrollView:
                            MDLabel:
                                id: observation
                                size_hint_y: None
                                text_size: self.width, None
                                height: self.texture_size[1]


            MDBottomNavigationItem:
                name: "screen 2"
                text: "Forecast"
                icon: "calendar-arrow-right"


                GridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.18, .18, .18)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    ScrollView:
                        MDLabel:
                            id: forecast
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]


            MDBottomNavigationItem:
                name: "screen 3"
                text: "Radar"
                icon: "radar"


                MDGridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.18, .18, .18)
                        Rectangle:
                            pos: self.pos
                            size: self.size

 
                    MDRectangleFlatButton:
                        text: "Get/Refresh"
                        on_release: root.get_radar()

                    
                    Image:
                        id: radar_id
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: None
                        height: "0dp"
                        source: ""
                        
            MDBottomNavigationItem:
                name: "screen 4"
                text: "About"
                icon: "information-outline"

                MDGridLayout:
                    cols: 1
                    
                    canvas.before:
                        Color:
                            rgb: (.18, .18, .18)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    MDList:
                        ThreeLineListItem:
                            text: "A Simple Weather App"
                            secondary_text: "thanks to simplemaps.com/data/us-cities for providing the database of locations"
                            tertiary_text: "thanks to icons8.com for providing the icon image"
    

                    MDScrollView:
                        
                        MDList:
                            
                            OneLineIconListItem:
                                
                                text: "Updates"
            
                                IconLeftWidget:
                                    icon: "update"
                                    on_release: root.update()
                                    
                            OneLineIconListItem:
                                text: "Say thanks"
                            
                                IconLeftWidget:
                                    icon: "cards-heart"
                                    on_release: root.donate()
                                    
                            
                            OneLineIconListItem:
                                text: "Close app"
                        
                                IconLeftWidget:
                                    icon: "logout"
                        
                                    on_release: 
                                        root.close_two()