            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            color: "#00FFCE"   


<about_page@Popup>
    auto_dismiss: True
    title: "About"
    size_hint: 0.6, 0.6
    pos_hint: {"x": 0.2, "top": 0.9}

    ScrollView:
        Label:
            text: "Created by Jesse Dorman.\n\n\nFor updates you can go here: https://github.com/Jdorman1289/wx_app/releases \n\nTo donate to the developer you can go here: https://ko-fi.com/jessecreates \n\n\nEnjoy!"

            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            color: "#00FFCE"   





#################################### Main Window Layout #############################
MainWindow:

    MDScreen:
        size: root.width, root.height

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: "screen 1"
                text: "Current"
                icon: "home-thermometer-outline"




                GridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.537, .812, .941)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    FloatLayout

                        


                        
                        MDTextField
                            id: location
                            hint_text: "City name: 'Dallas'"
                            pos_hint: {"top": .8, "left": 1}
                            height: 45
                            width: 100

                        MDTextField
                            id: state
                            hint_text: "State name: 'Texas'"
                            pos_hint: {"top": .8, "left": 1}
                            height: 45
                            width: 100

                        MDRaisedButton:
                            text: "Get Weather"
                            on_release: root.get_wx()
                            pos_hint: {"top": .4, "left": 1}

                        MDRaisedButton:
                            text: "Clear"
                            on_release: root.clear()
                            pos_hint: {"top": .2, "left": 1}


                        
                        ScrollView:
                            MDLabel:
                                id: observation
                                size_hint_y: None
                                text_size: self.width, None
                                height: self.texture_size[1]
                                md_color: app.theme_cls.primary_color


                                ScrollView:
                                    Label:
                                        id: forecast
                                        size_hint_y: None
                                        text_size: self.width, None
                                        height: self.texture_size[1]
                                        color: "#00FFCE"   


            MDBottomNavigationItem:
                name: "screen 2"
                text: "Forecast"
                icon: "calendar-arrow-right"


                GridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.537, .812, .941)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    ScrollView:
                        Label:
                            id: forecast
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]
                            md_color: app.theme_cls.primary_color


            MDBottomNavigationItem:
                name: "screen 3"
                text: "Radar"
                icon: "radar"


                GridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.537, .812, .941)
                        Rectangle:
                            pos: self.pos
                            size: self.size


                    FloatLayout
                        
                        MDRaisedButton:
                            text: "Get/Refresh"
                            pos_hint: {"top": 1, "right": 1}
                            on_release: root.get_radar()

                        
                        Image:
                            id: radar_id
                            pos_hint: {"top": .95, "left": .5}
                            allow_stretch: True
                            keep_ratio: True
                            size_hint_y: None
                            height: "0dp"
                            source: ""
