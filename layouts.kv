<about_page@Popup>
    auto_dismiss: True
    title: "About"
    size_hint: 0.6, 0.6
    pos_hint: {"x": 0.2, "top": 0.9}

    ScrollView:
        Label:
            text: "Created by Jesse Dorman.\n\n\nFor updates you can go here: https://github.com/Jdorman1289/wx_app/releases \n\nTo donate to the developer you can go here: https://ko-fi.com/jessecreates \n\n\nEnjoy!"

            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            color: "#00FFCE"   





#################################### Main Window Layout #############################
MainWindow:

    MDScreen:
        size: root.width, root.height

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: "screen 1"
                text: "Current"
                icon: "home-thermometer-outline"

                MDGridLayout:
                    cols: 2
                    
                    canvas.before:
                        Color:
                            rgb: (.0588, .3216, .7294)
                            #rgb: (.18, .18, .18)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    MDTextField:
                        id: location
                        hint_text: "City name:"
                        
                    MDRectangleFlatButton:
                        text: "Get Weather"
                        on_release: root.get_wx()
                    
                    MDTextField:
                        id: state
                        hint_text: "State name:"
                    
                    MDRectangleFlatButton:
                        text: "Clear"
                        on_release: root.clear()
                        

                    MDBoxLayout:
                        orientation: "vertical"
                        
                        ScrollView:
                            MDLabel:
                                id: observation
                                size_hint_y: None
                                text_size: self.width, None
                                height: self.texture_size[1]


            MDBottomNavigationItem:
                name: "screen 2"
                text: "Forecast"
                icon: "calendar-arrow-right"


                GridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.0588, .3216, .7294)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                    
                    ScrollView:
                        MDLabel:
                            id: forecast
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]


            MDBottomNavigationItem:
                name: "screen 3"
                text: "Radar"
                icon: "radar"


                MDGridLayout:
                    cols: 1
                    size: root.width, root.height

                    canvas.before:
                        Color:
                            rgb: (.0588, .3216, .7294)
                        Rectangle:
                            pos: self.pos
                            size: self.size

 
                    MDRectangleFlatButton:
                        text: "Get/Refresh"
                        on_release: root.get_radar()

                    
                    Image:
                        id: radar_id
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: None
                        height: "0dp"
                        source: ""
                        
